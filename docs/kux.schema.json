{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "kux://schema/v1",
  "title": "K-UX v1 Canonical Projection Schema",
  "type": "object",
  "required": [
    "@kux",
    "@status",
    "source",
    "projection",
    "replay",
    "proof_surface"
  ],
  "properties": {
    "@kux": {
      "type": "string",
      "const": "v1"
    },
    "@status": {
      "type": "string",
      "const": "canonical"
    },
    "source": {
      "type": "object",
      "required": [
        "collapse_result_hash",
        "collapse_trace_hash",
        "entropy",
        "invariants",
        "compression_ratio"
      ],
      "properties": {
        "collapse_result_hash": {
          "type": "string",
          "pattern": "^sha256:[a-f0-9]{64}$"
        },
        "collapse_trace_hash": {
          "type": "string",
          "pattern": "^sha256:[a-f0-9]{64}$"
        },
        "entropy": {
          "type": "number",
          "const": 0.21
        },
        "invariants": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "collapse_only",
              "field_perception",
              "compression_law",
              "unreachable_states"
            ]
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "compression_ratio": {
          "type": "number",
          "minimum": 0
        }
      },
      "additionalProperties": false
    },
    "projection": {
      "type": "object",
      "required": ["mode", "layout", "styling"],
      "properties": {
        "mode": {
          "type": "string",
          "enum": ["svg", "dom", "css", "canvas", "terminal"]
        },
        "layout": {
          "type": "string",
          "const": "deterministic"
        },
        "styling": {
          "type": "object",
          "required": ["pure", "no_runtime_injection"],
          "properties": {
            "pure": { "type": "boolean", "const": true },
            "no_runtime_injection": { "type": "boolean", "const": true }
          },
          "additionalProperties": false
        },
        "animation": {
          "type": "object",
          "properties": {
            "allowed": { "type": "boolean", "const": false },
            "async": { "type": "boolean", "const": false }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "replay": {
      "type": "object",
      "required": [
        "replay_identity_required",
        "hash_projection",
        "input_hash",
        "render_deterministic"
      ],
      "properties": {
        "replay_identity_required": {
          "type": "boolean",
          "const": true
        },
        "hash_projection": {
          "type": "string",
          "pattern": "^sha256:[a-f0-9]{64}$"
        },
        "input_hash": {
          "type": "string",
          "pattern": "^sha256:[a-f0-9]{64}$"
        },
        "render_deterministic": {
          "type": "boolean",
          "const": true
        }
      },
      "additionalProperties": false
    },
    "proof_surface": {
      "type": "object",
      "required": [
        "show_entropy",
        "show_invariants",
        "show_compression_ratio"
      ],
      "properties": {
        "show_entropy": { "type": "boolean" },
        "show_invariants": { "type": "boolean" },
        "show_compression_ratio": { "type": "boolean" },
        "show_trace": { "type": "boolean" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
